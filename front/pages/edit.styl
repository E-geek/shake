@import "../res/css/variables.styl"
@import "../res/css/mixins.styl"

.edit
  display: flex
  flex-direction: column
  padding: 24px 16px
  max-width: 512px
  width: 100%

  @media is-mobile
    padding: 24px

  &-wrapper
    center: column
    justify-content: flex-start

  &__back
    width: 100%
    height: 32px
    border-bottom: 1px solid #333
    padding: 7px 12px

    &-button
      display: inline-flex
      justify-content: center
      align-items: center
      height: 18px
      background: #ee
      color: #44
      padding: 2px 4px
      cursor: pointer
      font-size: 14px

  &__item
    display: flex
    flex-direction: row
    margin-bottom: 16px

    input
      flex: 1 1 0
      height: 48px
      padding: 0 8px
      border: 1px solid #333
      border-radius: 4px
      font-size: 20px

  &__remove
    center: row
    flex-shrink: 1
    width: 48px
    height: 48px
    cursor: pointer
    border-radius: 8px

    svg *
      fill: #FF7247

    &:hover
      background: #eee

      svg *
        fill: #FF531F

  &__buttons
    display: flex
    flex-direction: row

    .button
      width: 50%
